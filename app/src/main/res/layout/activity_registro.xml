<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registro">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de usuarios"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/txtNomUsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Ingrersar Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtCiuUsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar Ciudad"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtCorUsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar Correo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtPasUsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="*****"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnRegistrarUsu"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Usuario" />
</LinearLayout>